<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    >
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigathion"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigathion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint= "@color/navigation_text_selector"
        app:itemTextColor="@color/navigation_text_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_home_navigation"
        />


</androidx.constraintlayout.widget.ConstraintLayout>